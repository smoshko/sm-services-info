{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "async-protect"
    ],
    "rules": {
        "prefer-const": "error",
        "no-unused-vars": "error",
        "no-unused-expressions": "error",
        "async-protect/async-await": "error"
    }
}
